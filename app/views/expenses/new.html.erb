<div class="container">   
  <%= form_for @expense, url: {action: :create} do |f| %>   
      <div>   
        <h3>Add a Expense</h3>   
      </div>   
      <div>   
        <p>   
          <%= "<div>#{@expense.errors.full_messages.first}</div>".html_safe if @expense.errors.any? %>   
        <div>   
            <label>Name</label>   
              <%= f.text_field :name %>   
        </div>   
  
        <div>   
             <label>Amount</label>   
             <%= f.text_field :amount %>   
        </div>   
  
        <div>   
           <label>File Upload</label>   
              <%= f.text_field :file_upload %>   
        </div>   
         </p>   
      </div>   
      <div>   
        <p>   
          <%= "<div>#{@expense.errors.full_messages.first}</div>".html_safe if @expense.errors.any? %>   
        <div>   
            <label>Name</label>   
              <%= f.text_field :name %>   
        </div>   
  
        <div>   
             <label>Amount</label>   
             <%= f.text_field :amount %>   
        </div>   
  
        <div>   
           <label>File Upload</label>   
              <%= f.text_field :file_upload %>   
        </div>   
         </p>   
      </div> 
      <div>   
        <%= link_to 'Back', { controller: 'expenses', action: 'index'} %>   
        <%= f.submit 'Create Expense' %>   
      </div>   
  <% end %>   
</div>  