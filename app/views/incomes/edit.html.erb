<div class='bg-gradient-to-r from-indigo-500 h-screen w-screen flex justify-start items-center flex-col'>
  <div class='px-5 flex flex-row justify-between items-center bg-white h-20 w-full p-4'>
      <div class='flex flex-row items-center'>
        <img class='w-10 h-10 mr-4' src='https://static.moneylover.me/img/icon/icon.png' alt='logo' />
        <h1><%= current_user.email %></h1>
      </div>
      <div class='flex flex-row items-center'>
        <% if user_signed_in? %> 
        <%= link_to 'Add Transaction', new_transaction_path(current_user), class: 'rounded-lg bg-indigo-500 mr-10 text-white p-2' %>
        <%= link_to 'Add Income', new_income_path(current_user), class: 'rounded-lg bg-indigo-500 mr-10 text-white p-2' %>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
        <% else %>
          <%= button_to "Sign in", new_user_session_path %> 
        <% end %>
      </div>
    </div>
    <div class='w-1/3 h-full border-2 border-white backdrop-filter backdrop-blur-sm bg-white/10 mt-12 flex flex-col items-center p-5 rounded-lg'>
      <%= simple_form_for @income do |form| %>
        <div class='flex flex-row items-center w-full justify-start'>
          <%= link_to 'Back', {controller: 'incomes', action: 'index', input_html: {class: 'underline'}} %>
        </div>
        <table class='w-full bg-white rounded_lg mt-10'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
          <%= form.simple_fields_for :income_details do |detail| %>     
            <tr>
                <td><%= detail.input :name, label: false %></td>
                <td><%= detail.input :amount, label: false %> </td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <div class="actions">
          <%= form.button :submit, "Update", class: 'text-white bg-indigo-500 p-1 rounded-lg p-2 mt-5' %>
        </div>
      <% end %>
  </div>
</div>

