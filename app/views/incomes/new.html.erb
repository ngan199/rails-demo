<%= simple_form_for @income do |form| %>
  <%= form.date_select :year, { discard_day: true} %>
  <table border='2'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
      <%= form.simple_fields_for :income_details do |income| %>
        <tr>
            <td><%= income.input :name, label: false %></td>
            <td><%= income.input :amount, label: false %> </td>
        </tr>
      <% end %>
      </tbody>
  </table>

  <div class="actions">
    <%= link_to 'Back', {controller: 'transactions', action: 'index'} %>
    <%= form.button :submit %>
  </div>
<% end %>
