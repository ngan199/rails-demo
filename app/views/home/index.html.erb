<div class='p-5'>
  <div class='flex flex-row justify-between'>
    <div class='flex flex-row'>
      <img class='w-10 h-10' src='https://static.moneylover.me/img/icon/icon.png' alt='logo' />
      <h1>Welcome <%= current_user.email %></h1>
    </div>
    <div class='flex flex-row'>
      <% if user_signed_in? %> 
      <%= link_to 'Add Transaction', new_transaction_path(current_user) %>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
      <% else %>
        <%= button_to "Sign in", new_user_session_path %> 
      <% end %>
    </div>
  </div>

  <%= simple_form_for :search, url: root_path, method: "GET" do |f| %>
    <%= f.date_select :year, { discard_day: true} %>
    <div class="actions">
      <%= f.button :submit %>
    </div>
  <% end %>

  <div class="container" >   
      <h3>Income: <%= @income.total %></h3>   
      <h3>Transaction: <%=@transaction.total %></h3>  

        <div>   
          <%= link_to 'Add Transaction', new_transaction_path %>   
        </div>   
        <br>   
      <div>
        <h1>Expenses</h1>
        <table border="2">   
          <thead>   
            <tr>      
              <th>Name</th>   
              <th>Amount</th>     
            </tr>   
          </thead>   
          <tbody>    
              <% @transaction.expenses.each do |expense| %>   
                <tr>   
                  <td><%= expense.name %></td>   
                  <td><%= expense.amount %></td>    
                    <div>   
                    <td>     
                      <%= link_to 'Edit', edit_transaction_path(@transaction) %>   
                      <%= link_to 'Delete', transactions_path(@transaction), method: :delete %>   
                    </div>   
                  </td>   
                </tr> 
              <% end %>    
          </tbody>   
        </table>   
      </div>
  </div>  
</div>

