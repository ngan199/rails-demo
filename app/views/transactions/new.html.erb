<%= form_for @transaction, url: {action: :create} do |form| %>
  <table border='2'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th>File Upload</th>
        </tr>
      </thead>
      <tbody>
      <%= form.fields_for :expenses do |expense| %>
        <% TransactionsHelper::ExpenseNames.map do |name| %>
          <tr>
            <td><%= name %></td>
            <td><%= expense.text_field :amount %> </td>
            <td><%= expense.text_field :file_upload %> </td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
  </table>

  <div class="actions">
    <%= link_to 'Back', {controller: 'transactions', action: 'index'} %>
    <%= form.submit %>
  </div>
<% end %>