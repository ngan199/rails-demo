<div class='w-4/5 flex flex-col bg-white p-5'>
  <div class='flex flex-col h-1/4 w-full'>
      <h1 class='text-3xl mb-4 font-serif'>Your Transactions</h1>
      <%= simple_form_for :search, url: transactions_path, method: "GET" do |f| %>
        <div class='flex flex-row items-center justify-between w-full rounded-lg shadow-md p-5'>
          <div class='flex flex-row w-1/2'>
            <%= f.date_select :year, { discard_day: true}, class: 'mr-4 rounded-lg border-indigo-500 text-indigo-500 w-1/7' %>
            <%= f.button :submit, "Search", class: 'bg-indigo-500 rounded-lg p-2 text-white w-1/6 h-fit' %>
          </div>
          <%= link_to 'Add Transaction', new_transaction_path(user_id: current_user), class: 'bg-indigo-500 rounded-lg p-2 text-center text-white w-1/6 h-fit' %>
        </div>
      <% end %>
  </div>
  <div>
    <table class='w-full bg-white rounded_lg shadow-md'>   
      <thead class='bg-gray-100'>   
        <tr>      
          <td class='text-left p-2 text-stone-500 font-bold'>Number</td>    
          <td class='text-left p-2 text-stone-500 font-bold'>Amount</td>    
          <td class='text-left p-2 text-stone-500 font-bold'>Month</td>    
          <td class='text-left p-2 text-stone-500 font-bold'>Year</td> 
          <td></td>   
        </tr>   
      </thead>   
      <tbody>    
          <% @transactions&.each_with_index do |tr, index| %>   
              <tr class="border border-purple-50 shadow-md <%= index.odd? ? 'bg-gray-100' : 'bg-white' %>" >  
                <td class='text-left p-2 text-stone-500'><%= tr.id %></td>
                <td class='text-left p-2 text-green-500'>+<%= tr.total %></td>
                <td class='text-left p-2 text-stone-500'><%= tr.month %></td>
                <td class='text-left p-2 text-stone-500'><%= tr.year %></td>
                <td>
                  <%= link_to 'View', transaction_expenses_path(tr), class: 'bg-blue-400 text-white p-2 rounded-lg' %>   
                  <%= link_to 'Delete', transaction_path(tr), data: { turbo_method: :delete  }, class: 'bg-red-400 text-white p-2 rounded-lg' %>  
                </td> 
              </tr> 
          <% end %>  
        </tbody>   
      </table>  
  </div>
</div>